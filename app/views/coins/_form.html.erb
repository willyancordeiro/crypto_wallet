<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control", placeholder:"Nome da Moeda" %>
  </div>

  <div class="form-group">
    <%= form.label :acronym, style: "display: block" %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"Sigla da Moeda"  %>
  </div>

  <div class="form-group">
    <%= form.label :url_image, style: "display: block" %>
    <%= form.text_field :url_image, class:"form-control", placeholder:"Link do .png" %>
  </div>

  <div class="form-group">
    <%= form.label :mining_type_id, style: "display: block" %>
    <%= form.select("mining_type_id", @set_mining_type_options, { include_blank: "Selecione..." }, class:"form-control") %>
  </div>
<br>
  <div >
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
